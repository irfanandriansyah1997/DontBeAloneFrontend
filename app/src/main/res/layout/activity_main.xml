<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_collapseMode="parallax">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_marginBottom="56dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_header" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgHomeProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:tint="@color/colorGrey"
                android:background="@drawable/ic_bg_img_default"/>

            <TextView
                android:id="@+id/txtHomeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgHomeProfile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nunito_regular"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Syauqi Ilham" />

            <TextView
                android:id="@+id/txtHomeEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtHomeName"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nunito_regular"
                android:textColor="#fff"
                android:textSize="14sp"
                tools:text="syauqiilham28@gmail.com" />

        </RelativeLayout>

        <Button
            android:id="@+id/bLogout"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_bg_button"
            android:fontFamily="@font/nunito_regular"
            android:text="LOGOUT"
            android:textColor="#fff" />


    </LinearLayout>


</ScrollView>